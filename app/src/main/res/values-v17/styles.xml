<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_main_title" parent="style_base_title">
        <item name="android:background">@drawable/common_bg_underline</item>
        <item name="android:drawableStart">@mipmap/icon_title_left</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_marginStart">@dimen/common_padding</item>
        <item name="android:layout_marginEnd">@dimen/common_padding</item>
    </style>

    <style name="style_risk_search_tab" parent="android:Widget">
        <item name="android:background">@drawable/common_bg_corner_enable_light_16</item>
        <item name="android:paddingStart">@dimen/common_padding_select_tab_horizontal</item>
        <item name="android:paddingTop">@dimen/common_padding_select_tab_vertical</item>
        <item name="android:paddingEnd">@dimen/common_padding_select_tab_horizontal</item>
        <item name="android:paddingBottom">@dimen/common_padding_select_tab_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/common_color_text</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="style_risk_detail_tv" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingBottom">@dimen/common_padding_half</item>
        <item name="android:paddingStart">@dimen/common_padding</item>
        <item name="android:paddingEnd">@dimen/common_padding</item>
        <item name="android:textColor">@color/common_color_text</item>
        <item name="android:textColorHint">@color/common_color_hint</item>
    </style>
</resources>