<?xml version="1.0" encoding="utf-8"?>
<com.zxycloud.common.widget.LCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/common_padding">

                <TextView
                    android:id="@+id/risk_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_color_text_level_2"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/risk_report_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_risk_item_source"
                    android:drawableLeft="@mipmap/ic_risk_item_source"
                    android:drawablePadding="@dimen/common_padding"
                    android:paddingTop="@dimen/common_padding_half"
                    android:paddingBottom="@dimen/common_padding_half"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/risk_report_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_risk_item_level"
                    android:drawableLeft="@mipmap/ic_risk_item_level"
                    android:drawablePadding="@dimen/common_padding"
                    android:paddingTop="@dimen/common_padding_half"
                    android:paddingBottom="@dimen/common_padding_half"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/risk_report_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_risk_item_charger"
                    android:drawableLeft="@mipmap/ic_risk_item_charger"
                    android:drawablePadding="@dimen/common_padding"
                    android:paddingTop="@dimen/common_padding_half"
                    android:paddingBottom="@dimen/common_padding_half"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/risk_report_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_risk_item_time"
                    android:drawableLeft="@mipmap/ic_risk_item_time"
                    android:drawablePadding="@dimen/common_padding"
                    android:paddingTop="@dimen/common_padding_half"
                    android:paddingBottom="@dimen/common_padding_half"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/risk_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/common_color_text_level_2"
                    android:textSize="15dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/item_alert_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding"
                android:src="@mipmap/ic_state_fire"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <include layout="@layout/divider_line_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginBottom="@dimen/common_padding"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_line_height"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/risk_report_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_risk_item_img_select_no"
                android:drawableLeft="@mipmap/ic_risk_item_img_select_no"
                android:drawablePadding="@dimen/common_padding_half"
                android:textColor="@color/common_color_text_level_3"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_line_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/risk_report_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_risk_item_video_select_no"
                android:drawableLeft="@mipmap/ic_risk_item_video_select_no"
                android:drawablePadding="@dimen/common_padding_half"
                android:textColor="@color/common_color_text_level_3"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_line_height"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/risk_report_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_padding"
                android:layout_marginLeft="@dimen/common_padding"
                android:drawableStart="@mipmap/ic_risk_item_voice_select_no"
                android:drawableLeft="@mipmap/ic_risk_item_voice_select_no"
                android:drawablePadding="@dimen/common_padding_half"
                android:textColor="@color/common_color_text_level_3"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_line_height"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</com.zxycloud.common.widget.LCardView>
