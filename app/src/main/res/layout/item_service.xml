<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_top_margin"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/text_least"
                android:src="@mipmap/ic_ser_hidden_to_do" />

            <ImageView
                android:id="@+id/iv_reminder"
                android:layout_toRightOf="@+id/iv_ser"
                android:visibility="gone"
                android:layout_width="@dimen/text_least"
                android:layout_height="@dimen/text_least"
                android:src="@drawable/bg_msg_bubble" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ser"
            style="@style/text_item_tite_level"
            android:singleLine="false"
            android:layout_marginTop="@dimen/card_margin" />
    </LinearLayout>
</RelativeLayout>