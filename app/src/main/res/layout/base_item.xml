<?xml version="1.0" encoding="utf-8"?>
<com.zxycloud.common.widget.BswRecyclerView.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sil_drag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        layout="@layout/item_delete_right_layout"/>

    <android.support.v7.widget.CardView
        style="@style/style_item_delete_card_view"
        tools:ignore="RtlSymmetry,SpUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_level"
            android:paddingLeft="@dimen/text_level">

            <ImageView
                android:id="@+id/item_state"
                android:src="@mipmap/ic_state_normal"
                style="@style/item_state_image" />

            <TextView
                android:id="@+id/item_title"
                style="@style/item_title" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/item_title"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/item_1"
                   style="@style/item_include" />
               <TextView
                   android:id="@+id/item_2"
                   style="@style/item_include" />
               <TextView
                   android:id="@+id/item_3"
                   style="@style/item_include" />
               <TextView
                   android:id="@+id/item_4"
                   style="@style/item_include" />
               <TextView
                   android:id="@+id/item_5"
                   style="@style/item_include" />

               <include
                   android:id="@+id/include_gateway_state"
                   android:visibility="gone"
                   layout="@layout/include_gateway_state"/>
           </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.zxycloud.common.widget.BswRecyclerView.SwipeItemLayout>
