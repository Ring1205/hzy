<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <include layout="@layout/my_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.amap.api.maps.MapView
            android:id="@+id/alert_detail_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/alert_detail_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_padding"
            android:alpha="0"
            android:background="@drawable/bg_white_corner_10"
            android:drawableBottom="@mipmap/ic_alert_detail_change"
            android:padding="@dimen/common_padding" />

        <TextView
            android:id="@+id/alert_detail_less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_padding"
            android:background="@drawable/bg_white_corner_10"
            android:drawableBottom="@mipmap/ic_alert_detail_change"
            android:padding="@dimen/common_padding" />

        <TextView
            android:id="@+id/alert_detail_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:drawableTop="@mipmap/ic_alert_detail_guide"
            android:padding="@dimen/common_padding"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_detail_floor_place"
            style="@style/alert_bottom_btn"
            android:drawableEnd="@mipmap/ic_divider_vertical"
            android:drawableRight="@mipmap/ic_divider_vertical"
            android:text="@string/string_alert_floor_plan" />

        <TextView
            android:id="@+id/alert_detail_video"
            style="@style/alert_bottom_btn"
            android:drawableEnd="@mipmap/ic_divider_vertical"
            android:drawableRight="@mipmap/ic_divider_vertical"
            android:text="@string/string_alert_video" />

        <TextView
            android:id="@+id/alert_detail_device_detail"
            style="@style/alert_bottom_btn"
            android:text="@string/string_alert_device_detail" />
    </LinearLayout>
</LinearLayout>