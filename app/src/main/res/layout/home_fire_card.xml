<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    style="@style/style_item_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_tite_small"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_centerVertical="true"
                android:text="@string/home_near_fire"/>

            <View
                android:layout_marginLeft="@dimen/weight"
                style="@style/line_blue_vertical" />

            <View
                android:layout_marginTop="@dimen/bottom_height"
                style="@style/line_e6_1px" />
        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/line_tab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginEnd="@dimen/common_padding"
            app:tabMode="fixed"
            style="@style/home_fire_card" />

        <android.support.v4.view.ViewPager
            android:layout_marginBottom="@dimen/text_margin"
            android:id="@+id/line_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>