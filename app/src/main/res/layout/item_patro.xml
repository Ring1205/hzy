<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/style_item_delete_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry,SpUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_level"
            android:paddingLeft="@dimen/text_level">
            <ImageView
                android:id="@+id/iv_point_start"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_task_dns"/>

            <TextView
                android:id="@+id/tv_point_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginRight="@dimen/common_padding"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_toLeftOf="@+id/iv_point_start"
                android:ellipsize="end"
                android:lineSpacingExtra="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTite"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_point_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_point_title"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/common_padding"
                android:drawablePadding="@dimen/card_pading"
                android:drawableLeft="@mipmap/ic_task_point_type"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/color_gray_text"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_point_device_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_point_type"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/common_padding"
                android:drawablePadding="@dimen/card_pading"
                android:drawableLeft="@mipmap/ic_task_point_device_num"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/color_gray_text"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_point_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_point_device_num"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/common_padding"
                android:drawablePadding="@dimen/card_pading"
                android:drawableLeft="@mipmap/ic_item_address"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/color_gray_text"
                android:textSize="@dimen/text_14sp" />
            <TextView
                android:id="@+id/tv_point_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_point_address"
                android:paddingRight="@dimen/text_margin"
                android:paddingBottom="@dimen/common_padding"
                android:drawablePadding="@dimen/card_pading"
                android:drawableLeft="@mipmap/ic_point_warn"
                android:drawableRight="@mipmap/ic_point_down"
                android:lineSpacingExtra="10dp"
                android:text="@string/point_unqualified_records"
                android:textColor="@color/color_state_fault"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_itme"
        tools:listitem="@layout/item_task_patrol_point"
        android:nestedScrollingEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>