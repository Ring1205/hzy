<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/card_margin">

    <TextView
        android:id="@+id/tv_statistics"
        style="@style/home_title_statistics"
        android:drawableTop="@mipmap/ic_statistices_area"
        android:text="@string/home_task" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/home_title_statistics"
        android:text="@string/ellipsis" />

    <View
        android:layout_width="@dimen/text_tite"
        android:layout_height="@dimen/line_3dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@drawable/gray_streak_1dp" />
</LinearLayout>