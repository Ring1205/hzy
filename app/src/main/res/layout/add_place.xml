<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/map_view" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/white"
            style="@style/style_item_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/common_text_input_layout_style">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_place_name"
                        style="@style/text_input_style_item_et"
                        android:hint="@string/title_add_place_name"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/common_text_input_layout_style">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_admin_phone"
                        style="@style/text_input_style_item_et"
                        android:hint="@string/title_add_administrator_phone"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_pading"
                        android:layout_marginBottom="@dimen/card_pading"
                        android:visibility="gone" />
                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/common_text_input_layout_style">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_place_unit"
                        style="@style/text_input_style_item_et"
                        android:hint="@string/title_add_parent_area"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/common_text_input_layout_style">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_place_location"
                        style="@style/text_input_style_item_et"
                        android:hint="@string/title_add_place_address"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>