<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/style_item_card_view"
        android:layout_margin="@dimen/text_top_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.CustomTabLayout
                android:id="@+id/tab_titles"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_margin_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabMode="scrollable"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/common_color_text"
                app:tabTextAppearance="@style/tab_appearance"
                app:tabTextColor="@color/common_color_text_level_3" />

            <View
                style="@style/line_f0_1px"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>