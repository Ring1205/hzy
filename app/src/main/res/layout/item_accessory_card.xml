<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_haight_src"
    android:layout_margin="@dimen/line_2dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/iv_album"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/top_margin_height"
            android:layout_height="@dimen/top_margin_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_arrow_play_48dp" />
</android.support.v7.widget.CardView>