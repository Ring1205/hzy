<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_tite_small"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/card_margin"
                android:text="@string/home_real_time" />

            <View
                style="@style/line_blue_vertical"
                android:layout_marginLeft="@dimen/weight" />

            <View
                style="@style/line_e6_1px"
                android:layout_marginTop="@dimen/bottom_height" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/line_4dp">

            <TextView
                android:id="@+id/tv_now_alarm"
                style="@style/home_title_statistics"
                android:layout_width="@dimen/weight"
                android:layout_margin="@dimen/common_padding"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_now_alarm"
                android:text="@string/home_now_alarm" />

            <TextView
                android:id="@+id/tv_now_online"
                style="@style/home_title_statistics"
                android:layout_width="@dimen/weight"
                android:layout_margin="@dimen/common_padding"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_now_online"
                android:text="@string/home_now_online" />

            <TextView
                android:id="@+id/tv_now_offline"
                style="@style/home_title_statistics"
                android:layout_width="@dimen/weight"
                android:layout_margin="@dimen/common_padding"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_now_offline"
                android:text="@string/home_now_offline" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>