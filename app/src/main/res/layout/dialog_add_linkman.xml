<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_padding"
    tools:ignore="RtlSymmetry,SpUsage">

    <TextView
        android:id="@+id/use_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding"
        android:text="@string/string_linkman_contact"
        android:textColor="@color/common_main_color"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg_underline"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintTextAppearance="@style/common_signin_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_linkman_name"
                style="@style/start_up_style_item_et"
                android:background="@android:color/white"
                android:hint="@string/string_linkman_name_hint"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/clear_linkman_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:src="@mipmap/ic_linkman_add_delete"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding"
        android:background="@drawable/common_bg_underline"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:hintTextAppearance="@style/common_signin_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_linkman_phone"
                style="@style/start_up_style_item_et"
                android:background="@android:color/white"
                android:hint="@string/string_linkman_phone_hint"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/clear_linkman_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:src="@mipmap/ic_linkman_add_delete"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_linkman_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_gray_text" />

        <View
            android:layout_width="@dimen/common_line_height"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorLineC9" />

        <TextView
            android:id="@+id/add_linkman_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/common_main_color" />
    </LinearLayout>
</LinearLayout>
