<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="SpUsage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_marginTop="@dimen/common_padding"
            android:layout_marginEnd="@dimen/common_padding"
            android:layout_marginBottom="@dimen/common_padding"
            android:background="@drawable/bg_white_corner_10"
            android:paddingBottom="@dimen/card_margin"
            android:orientation="vertical"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding">

            <LinearLayout
                android:id="@+id/device_description_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_base_title"
                    android:layout_marginStart="@dimen/common_clear"
                    android:layout_marginEnd="@dimen/common_clear"
                    android:background="@android:color/transparent"
                    android:text="@string/device_install_details"
                    android:textColor="@color/common_color_text_level_3" />

                <TextView
                    android:id="@+id/device_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding"
                    android:layout_marginBottom="@dimen/common_padding"
                    android:background="@drawable/bg_ddd_corner_10_hollow"
                    android:gravity="start"
                    android:paddingStart="@dimen/common_padding"
                    android:paddingTop="@dimen/common_padding_half"
                    android:paddingEnd="@dimen/common_padding"
                    android:paddingBottom="@dimen/common_padding_half"
                    android:textColor="@color/common_color_text"
                    android:textColorHint="@color/common_color_hint"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_img_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/divider_line_layout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/device_picture"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="15dp" />

                <com.zxycloud.common.widget.BswRecyclerView.BswRecyclerView
                    android:id="@+id/device_show_img_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/common_padding_half" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_video_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/divider_line_layout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/device_video"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/item_video_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="@dimen/common_padding"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bg_video"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_voice_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/divider_line_layout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="@string/device_record"
                    android:textColor="@color/common_color_text_level_3"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/item_voice_img"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/common_padding"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_keyboard_voice_main_24dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
