<?xml version="1.0" encoding="utf-8"?>
<com.zxycloud.common.widget.BswRecyclerView.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sil_drag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/item_delete_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right" />

    <android.support.v7.widget.CardView
        style="@style/style_item_delete_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry,SpUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_level"
            android:paddingLeft="@dimen/text_level">

            <ImageView
                android:id="@+id/iv_start"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_task_dns"/>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_toLeftOf="@+id/iv_start"
                android:ellipsize="end"
                android:lineSpacingExtra="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTite"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_marginRight="@dimen/common_padding"
                android:layout_marginBottom="@dimen/common_padding"
                android:drawablePadding="@dimen/card_pading"
                android:drawableLeft="@mipmap/ic_task_validity"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/color_gray_text"
                android:textSize="@dimen/text_14sp" />

            <View
                style="@style/line_f0_1px"
                android:layout_below="@+id/item_info"
                android:layout_marginRight="@dimen/text_level" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_32_least"
                android:layout_below="@+id/item_info"
                android:layout_marginTop="@dimen/card_pading"
                android:layout_marginBottom="@dimen/card_margin"
                android:orientation="horizontal"
                android:paddingRight="@dimen/text_level">

                <TextView
                    android:layout_width="@dimen/weight"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/inspection_method"
                    android:textColor="@color/colorItem"
                    android:textSize="@dimen/text_14sp" />

                <View style="@style/line_vertical_c9"
                    android:layout_marginTop="@dimen/card_pading"
                    android:layout_marginBottom="@dimen/card_pading" />

                <ImageButton
                    android:id="@+id/nfc_task"
                    android:layout_width="@dimen/mine_head_src"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:src="@mipmap/ic_task_nfc" />

                <View style="@style/line_vertical_c9"
                    android:layout_marginTop="@dimen/card_pading"
                    android:layout_marginBottom="@dimen/card_pading" />

                <ImageButton
                    android:id="@+id/qr_code_task"
                    android:layout_width="@dimen/mine_head_src"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:src="@mipmap/ic_task_qr_code" />

                <View style="@style/line_vertical_c9"
                    android:layout_marginTop="@dimen/card_pading"
                    android:layout_marginBottom="@dimen/card_pading"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.zxycloud.common.widget.BswRecyclerView.SwipeItemLayout>
