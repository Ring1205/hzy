<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_padding">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/common_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_old_pwd"
                style="@style/text_input_style_item_et"
                android:hint="@string/old_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_padding_half"
            app:hintTextAppearance="@style/common_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_new_pwd"
                style="@style/text_input_style_item_et"
                android:hint="@string/new_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_padding_half"
            app:hintTextAppearance="@style/common_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_confirm_new_pwd"
                style="@style/text_input_style_item_et"
                android:hint="@string/confirm_new_password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin">

        <RadioButton
            android:id="@+id/radio_display_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_password"
            android:textColor="@color/colorHite"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_forget_password"
            style="@style/text_item_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/forget_password"
            android:textColor="@color/blue"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/text_top_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="@string/hint_passwd_ps"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14sp" />

</LinearLayout>