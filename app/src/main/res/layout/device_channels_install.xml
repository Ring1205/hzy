<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                style="@style/style_item_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/text_margin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_channels_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_channels_type"
                                style="@style/text_input_style_item_et"
                                android:drawableRight="@drawable/ic_arrow_drop_down"
                                android:focusable="false"
                                android:hint="@string/channels_type"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_channels_unit"
                            style="@style/text_input_style_item_et"
                            android:hint="@string/channels_unit"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_channels_code"
                            style="@style/text_input_style_item_et"
                            android:hint="@string/channels_code"
                            android:inputType="number"
                            android:maxLength="4" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_amplification_factor"
                            style="@style/text_input_style_item_et"
                            android:hint="@string/channels_amplification_factor"
                            android:inputType="number"
                            android:text="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_install_location"
                            style="@style/text_input_style_item_et"
                            android:hint="@string/channels_install_location"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_install_min_range"
                            style="@style/text_input_style_item_et"
                            android:ems="1234567890"
                            android:hint="@string/channels_install_min_range"
                            android:inputType="number"
                            android:maxLength="5" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_install_max_range"
                            style="@style/text_input_style_item_et"
                            android:ems="1234567890"
                            android:hint="@string/channels_install_max_range"
                            android:inputType="number"
                            android:maxLength="5" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_install_min_alarm"
                            style="@style/text_input_style_item_et"
                            android:ems="1234567890"
                            android:hint="@string/channels_install_min_alarm"
                            android:inputType="number"
                            android:maxLength="5" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_install_max_alarm"
                            style="@style/text_input_style_item_et"
                            android:ems="1234567890"
                            android:hint="@string/channels_install_max_alarm"
                            android:inputType="number"
                            android:maxLength="5" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>