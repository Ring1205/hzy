<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        style="@style/style_item_delete_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_pading"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry,SpUsage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_pading">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                app:hintTextAppearance="@style/common_text_input_layout_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_point_name"
                    style="@style/text_input_style_item_et"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/point_name"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                app:hintTextAppearance="@style/common_text_input_layout_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_patrol_type"
                    style="@style/text_input_style_item_et"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/patrol_type"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                app:hintTextAppearance="@style/common_text_input_layout_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_point_location"
                    style="@style/text_input_style_item_et"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/point_location"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                app:hintTextAppearance="@style/common_text_input_layout_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_patrol_made_date"
                    style="@style/text_input_style_item_et"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/patrol_made_date"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                app:hintTextAppearance="@style/common_text_input_layout_style">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_patrol_start_date"
                    style="@style/text_input_style_item_et"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="@string/patrol_start_date"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        style="@style/style_item_delete_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_pading"
        android:background="@android:color/white"
        tools:ignore="RtlSymmetry,SpUsage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_inspect_pro"
            tools:listitem="@layout/item_task_patrol_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>