<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        style="@style/style_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_title"
                android:text="@string/belongs_place" />

            <View
                style="@style/line_f0_1px"
                android:layout_marginLeft="@dimen/card_pading"
                android:layout_marginRight="@dimen/card_pading" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin"
                android:paddingLeft="@dimen/text_margin">

                <TextView
                    android:id="@+id/tv_place"
                    style="@style/text_item_tite_level"
                    android:layout_centerVertical="true"
                    android:text="@string/device_default_place" />

                <View
                    style="@style/line_blue_vertical"
                    android:layout_marginLeft="@dimen/weight" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/style_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_title"
                android:text="@string/device_list" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_devices"
                style="@style/recycler_style"
                tools:listitem="@layout/item_install_device" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>