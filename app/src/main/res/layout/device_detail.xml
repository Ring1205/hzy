<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_layout_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLine"
    tools:ignore="SpUsage">

    <include layout="@layout/toolbar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ezy.ui.layout.LoadingLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/adapter_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_adapter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            style="@style/style_item_card_view"
                            android:layout_marginLeft="@dimen/text_top_margin"
                            android:layout_marginTop="@dimen/text_top_margin"
                            android:layout_marginRight="@dimen/text_top_margin">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingRight="@dimen/common_padding"
                                android:paddingBottom="@dimen/common_padding">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/iv_adapter_state"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="@dimen/card_pading"
                                        android:src="@mipmap/ic_task_dns" />

                                    <TextView
                                        android:id="@+id/tv_adapter_title"
                                        style="@style/style_item_text"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="@dimen/common_padding"
                                        android:layout_marginRight="@dimen/common_padding"
                                        android:layout_marginBottom="@dimen/card_pading"
                                        android:layout_toLeftOf="@+id/iv_adapter_state"
                                        android:textSize="@dimen/text_18sp" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_adapter_code"
                                    style="@style/style_info_text"
                                    android:layout_marginTop="@dimen/text_top_margin"
                                    android:drawableLeft="@mipmap/ic_item_device_number" />

                                <TextView
                                    android:id="@+id/tv_adapter_online"
                                    style="@style/style_info_text"
                                    android:drawableLeft="@mipmap/ic_adapter_online" />

                                <TextView
                                    android:id="@+id/tv_adapter_place"
                                    style="@style/style_info_text"
                                    android:drawableLeft="@mipmap/ic_item_project_name" />

                                <TextView
                                    android:id="@+id/tv_adapter_location"
                                    style="@style/style_info_text"
                                    android:drawableLeft="@mipmap/ic_item_address" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <FrameLayout
                            android:id="@+id/fl_devices"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_device_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_padding"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_type_name"
                                style="@style/text_input_style_item_et"
                                android:enabled="false"
                                android:hint="@string/title_device_name"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_state"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_device_status"
                                android:enabled="false"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_system"
                                style="@style/text_input_style_item_et"
                                android:enabled="false"
                                android:hint="@string/title_device_system"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_install_location"
                                style="@style/text_input_style_item_et"
                                android:enabled="false"
                                android:hint="@string/title_installation"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_place_name"
                                android:enabled="false"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_place_name"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_gateway"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_gateway_name"
                                android:enabled="false"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_offline_online"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_imei"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_imei"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_device_imei"
                                android:enabled="false"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_gateway_name"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_gateway_name"
                                android:enabled="false"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_commissioning_date"
                                style="@style/text_input_style_item_et"
                                android:enabled="false"
                                android:hint="@string/title_start_running_date"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/common_text_input_layout_style">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_device_service_deadline"
                                style="@style/text_input_style_item_et"
                                android:hint="@string/title_validity"
                                android:enabled="false"
                                android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/ll_device_channels"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintTextAppearance="@style/common_text_input_layout_style">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_device_channels"
                                    style="@style/text_input_style_item_et"
                                    android:hint="@string/title_device_channels"
                                    android:inputType="text"
                                    android:enabled="false" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="@dimen/text_margin"
                                android:paddingRight="@dimen/text_margin"
                                android:text="@string/examine"
                                android:textColor="@color/common_main_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/et_device_video"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintTextAppearance="@style/common_text_input_layout_style">

                                <android.support.design.widget.TextInputEditText
                                    style="@style/text_input_style_item_et"
                                    android:hint="@string/title_device_video"
                                    android:inputType="text"
                                    android:enabled="false"
                                    android:text="@string/device_video" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="@dimen/text_margin"
                                android:paddingRight="@dimen/text_margin"
                                android:text="@string/examine"
                                android:textColor="@color/common_main_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/et_device_installation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintTextAppearance="@style/common_text_input_layout_style">

                                <android.support.design.widget.TextInputEditText
                                    style="@style/text_input_style_item_et"
                                    android:hint="@string/title_install_details"
                                    android:inputType="text"
                                    android:enabled="false"
                                    android:text="@string/device_install_details" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="@dimen/text_margin"
                                android:paddingRight="@dimen/text_margin"
                                android:text="@string/examine"
                                android:textColor="@color/common_main_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/et_device_point"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:hintTextAppearance="@style/common_text_input_layout_style">

                                <android.support.design.widget.TextInputEditText
                                    style="@style/text_input_style_item_et"
                                    android:hint="@string/title_device_plan"
                                    android:inputType="text"
                                    android:enabled="false"
                                    android:text="@string/device_plan" />
                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="@dimen/text_margin"
                                android:paddingRight="@dimen/text_margin"
                                android:text="@string/examine"
                                android:textColor="@color/common_main_color" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>
        </ezy.ui.layout.LoadingLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>