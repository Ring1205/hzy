<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="horizontal"
    tools:ignore="SpUsage,ContentDescription">

    <ImageView
        android:id="@+id/iv_risk_progress_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:src="@mipmap/ic_risk_progress_state_no_rectification" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_risk_progress_process_user"
            android:textColor="@color/common_color_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/risk_progress_process_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_half"
            android:text="@string/string_risk_progress_process_user"
            android:textColor="@color/common_color_text_level_2"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_half"
            android:text="@string/string_risk_progress_process_time"
            android:textColor="@color/common_color_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/risk_progress_process_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_half"
            android:text="@string/string_risk_progress_process_time"
            android:textColor="@color/common_color_text_level_2"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_half"
            android:text="@string/string_risk_progress_process_description"
            android:textColor="@color/common_color_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/risk_progress_process_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_half"
            android:layout_marginBottom="25dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/string_risk_progress_process_description"
            android:textColor="@color/common_color_text_level_2"
            android:textSize="14dp" />

        <include layout="@layout/divider_line_layout" />
    </LinearLayout>
</LinearLayout>