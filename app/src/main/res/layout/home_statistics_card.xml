<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    style="@style/style_item_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_tite_small"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_centerVertical="true"
                android:text="@string/home_actual"/>

            <View
                android:layout_marginLeft="@dimen/weight"
                style="@style/line_blue_vertical" />

            <View
                android:layout_marginTop="@dimen/bottom_height"
                style="@style/line_e6_1px" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_home_statistics"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>